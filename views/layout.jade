html.no-js(lang='en')
  //<![endif]
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

    title= title

    meta(name='author', content='#{meta.author}')
    meta(name='description', content='#{meta.description}')
    meta(name='keywords', content='#{meta.keywords}')
    meta(name='viewport', content='width=device-width')
    link(rel='shortcut icon', href='/images/favicon.png')

    link(rel='stylesheet', href="/stylesheets/style.css")

    block topScripts
      script(src='/javascripts/vendor/modernizr.js')

  body
    //if lt IE 7
      p.chromeframe
        | You are using an outdated browser.
        a(href='http://browsehappy.com/') Upgrade your browser today
        | or
        a(href='http://www.google.com/chromeframe/?redirect=true') install Google Chrome Frame
        | to better experience this site.
    if app != null
      div(ng-app='#{app}', ng-controller='#{ctrl}')
        include partials/body
    else
      include partials/body

    block bottomScripts
      if env == 'production'
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/1.0.1/lodash.min.js")
        script(src="/javascripts/app.min.js")
      else
        script(src='/javascripts/vendor/jquery.js')
        script(src='/javascripts/vendor/angular.js')
        script(src="/javascripts/vendor/lodash.js")
        script(src="/javascripts/app.js")

      script(src='/javascripts/vendor/amplify.store.min.js')